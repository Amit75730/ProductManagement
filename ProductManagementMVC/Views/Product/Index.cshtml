@model List<ProductManagementMVC.Models.ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card">
                @* <img class="card-img-top" src="@product.ImageUrl" alt="Product Image"> *@
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    @* <p class="card-text">@product.Description</p> *@
                    <p class="card-text"><strong>Price:</strong> $@product.Price</p>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
