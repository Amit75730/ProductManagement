@{
    ViewBag.Title = "Place Order";
}

<h2>Place Your Order</h2>

<p>Your cart will be used to place an order.</p>

<form method="post" action="@Url.Action("PlaceOrder", "Order")">
    <button type="submit" class="btn btn-success">Place Order</button>
</form>

<a href="@Url.Action("OrderHistory", "Order")" class="btn btn-secondary">Back to Order History</a>
