@model IEnumerable<ProductManagementMVC.Models.OrderDTO>

@{
    ViewBag.Title = "Order History";
}

<h2>Your Orders</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Total Amount</th>
            <th>Order Date</th>
            <th>Payment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.TotalAmount</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Order", new { orderId = order.OrderId })" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Category")" class="btn btn-primary">Place New Order</a>
